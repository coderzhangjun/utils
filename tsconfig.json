{
  "compilerOptions": {
    "target": "es5", // 保持目标为 ES5
    "lib": ["es2015", "dom"], // 添加 es2015 支持
    "module": "esnext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true, // 仅生成类型文件
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
